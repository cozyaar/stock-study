{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "strict": false,
    "skipLibCheck": true,
    "outDir": "temp"
  },
  "include": [
    "api/**/*"
  ]
}